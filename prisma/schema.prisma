// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/tfcapp"
}

model User {
  id         Int                @id @default(autoincrement())
  createdAt  DateTime           @default(now())
  email      String             @unique
  username   String             @unique
  name       String
  lastname   String?
  visibility Int
  password   String
  workspaces UserOnWorkspaces[]
}

model UserOnWorkspaces {
  id          Int       @id @default(autoincrement())
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId Int
  role        Int
}

model Workspace {
  id              Int                @id @default(autoincrement())
  createdAt       DateTime           @default(now())
  name            String
  description     String?
  directories     Directory[]
  users           UserOnWorkspaces[]
  visibility      Int
  InvitationCodes InvitationCodes[]
}

model Directory {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  name        String
  description String?
  parent      Workspace @relation(fields: [parentId], references: [id])
  parentId    Int
  data        Data[]
}

model Data {
  id         Int         @id @default(autoincrement())
  createdAt  DateTime    @default(now())
  name       String
  parent     Directory   @relation(fields: [parentId], references: [id])
  parentId   Int
  type       Int
  data       String?
  atttribute Attribute[]
}

model Attribute {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  data      Data     @relation(fields: [dataId], references: [id])
  dataId    Int
  type      Int
  value     String?
}

model InvitationCodes {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId Int
  code        String
}

model Events {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  type        Int
  row         Int
  workspaceId Int?
  userId      Int
  name        String?
  value       String?
}
