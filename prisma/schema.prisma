model InvitationCodes {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId Int
  code        String
}

model Events {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  type        Int
  row         Int
  actionType  Int
  workspaceId Int?
  userId      Int
  name        String?
  value       String?  @db.LongText
}
