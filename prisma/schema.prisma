// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db{
    provider = "mysql"
    url = "mysql://root:@localhost:3306/tfcapp"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  username  String   @unique
  name      String?
  lastname  String
}

model Workspace {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  name        String
  description String
}

model Directory {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  parent      Int
}

model Data{
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  parent      Int
  type        Int
  data        String
}