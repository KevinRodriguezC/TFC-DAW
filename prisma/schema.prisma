// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db{
    provider = "mysql"
    url = "mysql://root:@localhost:3306/tfcapp"
}

model User {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  email      String   @unique
  username   String   @unique
  name       String?
  lastname   String
  workspaces UserOnWorkspaces[]
}

model UserOnWorkspaces{
  id          Int       @id @default(autoincrement())
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId Int
  role        Int
}

model Workspace {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  name        String
  description String
  directories Directory[]
  users       UserOnWorkspaces[]
}

model Directory {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  parent      Workspace @relation(fields: [parentId], references: [id])
  parentId    Int
  data        Data[]
}

model Data{
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  parent      Directory @relation(fields: [parentId], references: [id])
  parentId    Int
  type        Int
  data        String
}